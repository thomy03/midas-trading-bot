# TradingBot V3 - Environment Variables
# Copy this file to .env and fill in your values

# ===========================
# General Settings
# ===========================
TZ=Europe/Paris
DEBUG=false
CAPITAL=1500

# ===========================
# GROK API (xAI) - Layer 2 Sentiment Analysis
# ===========================
# Get your API key from https://console.x.ai/
GROK_API_KEY=xai-your_grok_api_key_here
GROK_MODEL=grok-4-1-fast-reasoning

# ===========================
# Telegram Bot Configuration
# ===========================
# Create a bot via @BotFather on Telegram to get these values
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ===========================
# Email Configuration (Optional)
# ===========================
# For Gmail, use an App Password: https://myaccount.google.com/apppasswords
EMAIL_ENABLED=False
EMAIL_FROM=your_email@example.com
EMAIL_TO=recipient@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@example.com
SMTP_PASSWORD=your_email_password_or_app_password

# ===========================
# API Configuration
# ===========================
# API key for REST API authentication
API_KEY=your-secret-api-key-here

# ===========================
# Scheduler Configuration
# ===========================
SCHEDULER_ENABLED=false
SCHEDULER_TIME=09:30
SCHEDULER_MARKETS=NASDAQ,SP500

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO

# ===========================
# Google AI (Gemini) - PRIMARY LLM
# ===========================
# Get your API key from https://aistudio.google.com/apikey
# FREE tier: 15 requests/minute, 1M tokens/day
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-3-flash-preview

# ===========================
# OpenRouter API - FALLBACK (Optional)
# ===========================
# Get your API key from https://openrouter.ai/keys
# Only needed if you want to use Claude, GPT-4, etc.
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3-haiku

# ===========================
# Trend Discovery Settings
# ===========================
# Daily scan time (HH:MM format)
TREND_SCAN_TIME=06:00

# ===========================
# News Sources API (Free)
# ===========================
# NewsAPI - Get free key at https://newsapi.org/register (100 req/day)
NEWSAPI_KEY=your_newsapi_key_here

# Alpha Vantage - Get free key at https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_KEY=your_alphavantage_key_here

# ===========================
# V4 - AUTONOMOUS TRADING AGENT
# ===========================

# StockTwits API (Optional - for enhanced social scanning)
# Get access token at https://stocktwits.com/developers
STOCKTWITS_ACCESS_TOKEN=

# ===========================
# Interactive Brokers (IBKR)
# ===========================
# TWS or IB Gateway must be running with API enabled
# Ports: 7497=TWS Paper, 7496=TWS Live, 4001=Gateway Paper, 4002=Gateway Live
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# ===========================
# Trading Configuration V4
# ===========================
# Starting capital in EUR
TRADING_CAPITAL=1500

# Risk parameters (hard-coded in guardrails.py, but documented here)
# MAX_DAILY_LOSS_PCT=0.03     # 3% = Kill switch
# MAX_POSITION_PCT=0.10       # 10% max per position
# MAX_DRAWDOWN_PCT=0.15       # 15% = Pause 24h

# Autonomy mode: full, hybrid, manual
AUTONOMY_MODE=hybrid

# Enable real trading (CAUTION!)
ENABLE_LIVE_TRADING=false
