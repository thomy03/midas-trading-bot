# Midas V8 - Production Environment Variables
# Copy to .env on the VPS and fill in your real values

# ===========================
# General
# ===========================
TZ=Europe/Paris
DEBUG=false
LOG_LEVEL=INFO

# ===========================
# Trading Configuration
# ===========================
TRADING_CAPITAL=1500
AUTONOMY_MODE=hybrid
ENABLE_LIVE_TRADING=false

# ===========================
# Google Gemini (PRIMARY LLM - V8 Intelligence Orchestrator)
# ===========================
# FREE tier: 15 req/min, 1M tokens/day
# Get key: https://aistudio.google.com/apikey
GOOGLE_AI_API_KEY=REPLACE_WITH_YOUR_KEY
GEMINI_MODEL=gemini-3-flash-preview

# ===========================
# Grok / xAI (Sentiment Analysis)
# ===========================
# Get key: https://console.x.ai/
GROK_API_KEY=REPLACE_WITH_YOUR_KEY
GROK_MODEL=grok-3-fast

# ===========================
# Telegram Notifications
# ===========================
# Create bot via @BotFather
TELEGRAM_BOT_TOKEN=REPLACE_WITH_YOUR_TOKEN
TELEGRAM_CHAT_ID=REPLACE_WITH_YOUR_CHAT_ID

# ===========================
# Interactive Brokers (Paper Trading)
# ===========================
# Not needed for initial testing (mock mode)
IBKR_HOST=127.0.0.1
IBKR_PORT=7497
IBKR_CLIENT_ID=1

# ===========================
# Optional APIs (enhance signals but not required)
# ===========================
NEWSAPI_KEY=
ALPHAVANTAGE_KEY=
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-3-haiku
STOCKTWITS_ACCESS_TOKEN=

# ===========================
# Email (Optional)
# ===========================
EMAIL_ENABLED=False
